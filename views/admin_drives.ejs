<body style="background-color: rgb(237, 241, 255);">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="pcdash">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </nav>

    <h3 style="padding:20px;padding-left:550px">Drives List</h3>
    <hr>

    <!-- Table -->
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Company Name</th>
                    <th scope="col">Offer</th>
                    <th scope="col">CTC</th>
                    <th scope="col">Date Of Recruitment</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through students and display their information -->
                <% for(let drive of result) { %>


                    <tr>
                        <td>
                            <%= drive.company_name %>
                        </td>

                        <td>
                            <%= drive.offer %>
                        </td>
                        <td>
                            <%= drive.ctc %>
                        </td>

                        <td>
                            <%= drive.date_of_recruitment.toDateString() %>
                        </td>

                    </tr>
                    <% } %>

            </tbody>
        </table>


    </div>






</body>

